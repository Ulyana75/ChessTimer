<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.TimerFragment"
    android:background="?attr/colorSecondary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_timer_second"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        android:clickable="true"
        android:focusable="true"
        android:rotation="180"
        android:soundEffectsEnabled="false">

        <com.itmofitip.chesstimer.view.CircularProgressBar
            android:id="@+id/progress_bar_second"
            app:progressBarThickness="8dp"
            app:progressbarColor="@color/main_blue"
            style="@style/circular_progress_bar"
            tools:ignore="MissingConstraints"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/progress_bar_second"
            app:layout_constraintEnd_toEndOf="@+id/progress_bar_second"
            app:layout_constraintBottom_toBottomOf="@id/progress_bar_second"
            app:layout_constraintTop_toTopOf="@id/progress_bar_second"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_second"
                style="@style/time_text"
                tools:text="05:00"/>

            <TextView
                android:id="@+id/time_ms_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/base_text"
                android:textSize="42sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="-32dp"
                tools:text="022ms"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/moves_count_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/base_text"
            tools:text="0"
            android:textSize="24sp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="13dp"/>

        <View
            android:id="@+id/inactive_second"
            style="@style/inactive_view"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_timer_first"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline"
        android:clickable="true"
        android:focusable="true"
        android:soundEffectsEnabled="false">

        <com.itmofitip.chesstimer.view.CircularProgressBar
            android:id="@+id/progress_bar_first"
            style="@style/circular_progress_bar"
            app:progressBarThickness="8dp"
            app:progressbarColor="@color/main_blue"
            tools:ignore="MissingConstraints"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/progress_bar_first"
            app:layout_constraintEnd_toEndOf="@+id/progress_bar_first"
            app:layout_constraintBottom_toBottomOf="@id/progress_bar_first"
            app:layout_constraintTop_toTopOf="@id/progress_bar_first"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_first"
                style="@style/time_text"
                tools:text="05:00"/>

            <TextView
                android:id="@+id/time_ms_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/base_text"
                android:textSize="42sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="-32dp"
                tools:text="022ms"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/moves_count_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/base_text"
            tools:text="0"
            android:textSize="24sp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="13dp"/>

        <View
            android:id="@+id/inactive_first"
            style="@style/inactive_view"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/tap_to_start"
        android:layout_width="126dp"
        android:layout_height="176dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/tap_for_start" />

    <View
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/main_blue"/>

    <ImageView
        android:id="@+id/continue_button"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/continue_button"
        android:tintMode="src_in"
        app:tint="@android:color/transparent"
        android:background="@drawable/continue_button_with_ripple"/>

    <ImageView
        android:id="@+id/pause_button"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/pause_button"
        android:tintMode="src_in"
        app:tint="@android:color/transparent"
        android:background="@drawable/pause_button_with_ripple"/>

    <ImageView
        android:id="@+id/settings_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tap_to_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/settings_button"
        android:tintMode="src_in"
        app:tint="@android:color/transparent"
        android:background="@drawable/settings_button_with_ripple"/>

    <ImageView
        android:id="@+id/restart_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toEndOf="@id/tap_to_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/restart_button"
        android:tintMode="src_in"
        app:tint="@android:color/transparent"
        android:background="@drawable/restart_button_with_ripple" />

</androidx.constraintlayout.widget.ConstraintLayout>