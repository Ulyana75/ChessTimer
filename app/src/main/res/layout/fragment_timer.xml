<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.TimerFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:background="@color/main_blue"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_timer_second"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        android:clickable="true"
        android:focusable="true"
        android:rotation="180">

        <com.itmofitip.chesstimer.view.CircularProgressBar
            android:id="@+id/progress_bar_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:progressBarThickness="8dp"
            app:progressbarColor="@color/main_blue"
            android:layout_marginTop="90dp"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="54dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/time_second"
            app:layout_constraintTop_toTopOf="@id/progress_bar_second"
            app:layout_constraintBottom_toBottomOf="@id/progress_bar_second"
            tools:text="05:00"
            style="@style/time_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_timer_first"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:focusable="true">

        <com.itmofitip.chesstimer.view.CircularProgressBar
            android:id="@+id/progress_bar_first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:progressBarThickness="8dp"
            app:progressbarColor="@color/main_blue"
            android:layout_marginTop="90dp"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="54dp"/>

        <TextView
            android:id="@+id/time_first"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/progress_bar_first"
            app:layout_constraintBottom_toBottomOf="@id/progress_bar_first"
            tools:text="05:00"
            style="@style/time_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>