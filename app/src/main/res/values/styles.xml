<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="time_text">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">72sp</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="settings_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:background">@color/main_blue</item>
    </style>

    <style name="add_time_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">21dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@color/main_blue</item>
    </style>

    <style name="base_text">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="fontFamily">@font/oswald_regular</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="base_text_light">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="fontFamily">@font/oswald_light</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="circular_progress_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">90dp</item>
        <item name="android:layout_marginStart">54dp</item>
        <item name="android:layout_marginEnd">54dp</item>
        <item name="android:layout_marginBottom">54dp</item>
    </style>

    <style name="inactive_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/black_transparent</item>
    </style>

    <style name="number_picker_text">
        <item name="android:fontFamily">@font/oswald_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColorPrimary">?attr/colorOnSecondary</item>
        <item name="colorControlNormal">@color/transparent</item>
    </style>
</resources>