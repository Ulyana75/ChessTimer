<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="time_text">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">72sp</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="settings_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:background">@color/main_blue</item>
    </style>

    <style name="base_text">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/oswald_regular</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
</resources>