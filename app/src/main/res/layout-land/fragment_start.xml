<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.StartFragment">

    <ImageView
        android:id="@+id/chess_queen"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="112dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/chess_queen"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"/>

    <ImageView
        android:id="@+id/chess_clock_title"
        android:layout_width="215dp"
        android:layout_height="141dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chess_queen"
        app:layout_constraintEnd_toStartOf="@+id/start_button"
        android:src="@drawable/chess_clock_title"/>

    <TextView
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:textColor="?attr/colorOnSecondary"
        android:letterSpacing="0.05"
        android:fontFamily="@font/oswald_semi_bold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/chess_clock_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chess_clock_title"
        app:layout_constraintBottom_toBottomOf="@+id/chess_clock_title"
        android:background="@drawable/button_start_bg"
        android:paddingStart="45dp"
        android:paddingEnd="45dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>