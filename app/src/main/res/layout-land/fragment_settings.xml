<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.SettingsFragment"
    android:overScrollMode="never"
    android:background="?attr/colorSecondary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/return_button"
            android:layout_width="65dp"
            android:layout_height="57dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/return_button"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:tintMode="src_in"
            app:tint="@android:color/transparent"
            android:background="@drawable/return_button_with_ripple"/>

        <TextView
            android:id="@+id/time_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_header_time"
            style="@style/base_text"
            android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/return_button"
            android:layout_marginStart="36dp"/>

        <View
            android:id="@+id/time_separator"
            app:layout_constraintTop_toBottomOf="@id/time_header"
            style="@style/settings_separator"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/add_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_separator"
            style="@style/base_text_light"
            android:text="@string/settings_add_time"
            android:textSize="24sp"
            android:background="@drawable/border_for_add_button"
            android:textAlignment="center"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/time_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/time_recycler_view_item"
            app:layout_constraintTop_toBottomOf="@id/add_button"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            android:overScrollMode="never"/>

        <TextView
            android:id="@+id/sounds_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_header_sound"
            style="@style/base_text"
            android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/time_recycler_view"
            android:layout_marginTop="35dp"
            android:layout_marginStart="36dp"/>

        <View
            android:id="@+id/sound_separator"
            app:layout_constraintTop_toBottomOf="@id/sounds_header"
            style="@style/settings_separator"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/sound_on_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sound_separator"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            style="@style/base_text_light"
            android:text="@string/click_sound_title"
            android:textSize="24sp"
            android:layout_marginStart="36dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_sound_on_click"
            android:layout_width="57dp"
            android:layout_height="29dp"
            app:layout_constraintBottom_toBottomOf="@id/sound_on_click"
            app:layout_constraintTop_toTopOf="@+id/sound_on_click"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            android:thumb="@drawable/custom_thumb"
            app:track="@drawable/custom_track"
            android:checked="true"/>

        <TextView
            android:id="@+id/sound_on_low_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sound_on_click"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            style="@style/base_text_light"
            android:text="@string/sound_on_low_time_title"
            android:textSize="24sp"
            android:layout_marginStart="36dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_sound_low_time"
            android:layout_width="57dp"
            android:layout_height="29dp"
            app:layout_constraintBottom_toBottomOf="@id/sound_on_low_time"
            app:layout_constraintTop_toTopOf="@+id/sound_on_low_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            android:thumb="@drawable/custom_thumb"
            app:track="@drawable/custom_track"
            android:checked="true"/>

        <TextView
            android:id="@+id/vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sound_on_low_time"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            style="@style/base_text_light"
            android:text="@string/vibration_title"
            android:textSize="24sp"
            android:layout_marginStart="36dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_vibration"
            android:layout_width="57dp"
            android:layout_height="29dp"
            app:layout_constraintBottom_toBottomOf="@id/vibration"
            app:layout_constraintTop_toTopOf="@+id/vibration"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            android:thumb="@drawable/custom_thumb"
            app:track="@drawable/custom_track"/>

        <TextView
            android:id="@+id/theme_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_header_theme"
            style="@style/base_text_light"
            android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/vibration"
            android:layout_marginTop="35dp"
            android:layout_marginStart="36dp"/>

        <View
            android:id="@+id/theme_separator"
            app:layout_constraintTop_toBottomOf="@id/theme_header"
            style="@style/settings_separator"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/dark_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/theme_separator"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            style="@style/base_text_light"
            android:text="@string/dark_theme_title"
            android:textSize="24sp"
            android:layout_marginStart="36dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_dark_theme"
            android:layout_width="57dp"
            android:layout_height="29dp"
            app:layout_constraintBottom_toBottomOf="@id/dark_theme"
            app:layout_constraintTop_toTopOf="@+id/dark_theme"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            android:thumb="@drawable/custom_thumb"
            app:track="@drawable/custom_track"
            android:enabled="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintTop_toBottomOf="@id/dark_theme"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>